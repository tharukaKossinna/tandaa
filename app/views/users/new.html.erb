<h1> Register </h1>

<%= form_for :user, url: users_path do |f| %>
    <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger"><%= msg %></div>
        <% end %>
    <% end %>
    
    <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </p>

    <p>
        <%= f.label :email %><br>
        <%= f.text_field :email %>
    </p>

    <p>
        <%= f.label :password %><br>
        <%= f.text_field :password %>
    </p>

    <p> 
        <%= f.submit({:class => 'btn btn-primary'})%>
    </p>
<% end %>